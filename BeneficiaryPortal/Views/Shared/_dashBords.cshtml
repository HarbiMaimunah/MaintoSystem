@using BeneficiaryPortal.ModelsLanguage;
@inject LanguageService language

<!DOCTYPE html>
<html lang="en" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] </title>
    <link rel="stylesheet" href="~/js/bootstrap-5.0.2-dist/bootstrap-5.0.2-dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <!-- Bootstrap 5 Navbar -->
        <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm ">
            <div class="container-lg">
                <a class="navbar-brand" href="#">
                    <img src="~/images/logo.png" alt="" class="navbar-logo">
                </a>
                <button class="navbar-toggler"
                        type="button"
                        data-bs-toggle="collapse"
                        data-bs-target="#navbarSupportedContent"
                        aria-controls="navbarSupportedContent"
                        aria-expanded="false"
                        aria-label="Toggle navigation">

                    <span class="navbar-toggler-icon light"></span>
                </button>
                <div class="collapse navbar-collapse " id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-3 mb-lg-0 ">
                        <li class="nav-item">
                            <a class="nav-link navbar-link " aria-current="page" onclick="location.href='@Url.Action("MyAccount", "Beneficiary")'"> @language.Getkey("MyAccount") </a>
                        </li>
                        <li class="nav-item">

                            <a class="nav-link navbar-link active" onclick="location.href='@Url.Action("TicketsList", "Beneficiary")'">@language.Getkey("Order")</a>
                        </li>
                        <li class="nav-item">

                            <a class="nav-link navbar-link" href="#">@language.Getkey("Notification")</a>
                        </li>
                    </ul>
                    <div>
                        <button class="bg-white btn-logout btn me-5 d-flex justify-content-center align-items-center" onclick="location.href='@Url.Action("SignOut", "Beneficiary")'">
                            <img src="~/images/logout.png" alt="" class="logout-logo">
                        </button>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    @RenderSection("Scripts2", required: false)
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/bootstrap-5.0.2-dist/bootstrap-5.0.2-dist/js/bootstrap.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    @section Scripts2 {
        <script src="~/js/Beneficiary/updateUser.bundle.min.js"></script>
    }
</body>
</html>

@using BeneficiaryPortal.ModelsLanguage;
@inject LanguageService language

@model BeneficiaryPortal.Models.BeneficiaryRegistration
@{
    ViewData["Title"] = "Sign up";
}

@section Scripts2{
    <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
    @*<script src="~/js/Beneficiary/signup.bundle.min.js"></script>*@
    <script src="~/js/Beneficiary/signup.js"></script>
    <h1> @language.Getkey("SignUp")</h1>

    <p class="text-danger">@TempData["SignupError"]</p>
    @using (Html.BeginForm("Register", "BeneficiaryEntry", FormMethod.Post))
    {

        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <div class="form-group">
                @*@Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })*@
                <label> @language.Getkey("Name") </label>
                <div class="col-sm-3">
                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
            <br />
            <div class="form-group">
                @*@Html.LabelFor(model => model.Phone, htmlAttributes: new { @class = "control-label col-md-2" })*@
                <label> @language.Getkey("Phone") </label>
                <div class="col-sm-3">
                    @Html.EditorFor(model => model.Phone, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
            <br />
            <label>@language.Getkey("Building")</label>
            <select id="buildingsList" asp-for="@Model.BuildingNumber" onchange="GetFloor('@Url.Action("ListFloors", "BeneficiaryEntry")')">
                @foreach (var building in ViewBag.BuildingsList)
                {
                    <option value="@building.Id">@building.Number</option>
                }
            </select>
            <br />
            <label>@language.Getkey("Floor")</label>
            <select id="floorsList" asp-for="@Model.FloorNumber">
            </select>
            <br />
            <div class="form-group">
                @* @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2" })*@
                @language.Getkey("Email")
                <div class="col-sm-3">
                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
            <br />
            <div class="form-group">
                @*@Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-2" })*@
                @language.Getkey("Password")
                <div class="col-sm-3">
                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Sign up" class="btn btn-primary" />
                </div>
            </div>
        </div>

    }
}


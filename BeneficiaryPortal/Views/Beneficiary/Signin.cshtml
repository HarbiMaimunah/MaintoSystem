@model BeneficiaryPortal.Models.Login
@{
    Layout = "_Layout";
}


@Html.AntiForgeryToken()
<div class=" card-log-m ">
    <div class="row bg-white rounded-4 shadow center">
        <div class="col-md-5 col-lg-4 col-xl-3 boder border-dark p-4 text-center ">
            <!--Logo-->
            <div class="mt-3 mt-md-5">
                <img class=" icon-img d-md-none position-relative" src="\images\computer-cleaner.png" alt="image">
                <img class="logo-logIn my-4" src="\images\logo.png" alt="minto logo">
            </div>
            <!--input in div-->

            @using (Html.BeginForm("Login", "Beneficiary", FormMethod.Post))
            {
                <div class="mt-3 mt-xl-5">
                    <div class="input my-3 ">
                        <i class=" position-absolute  ">
                            <img class="email-icon" src="\images\mail.png" alt="email icon">
                        </i>
                        @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "input-field bg-white rounded-pill p-Input", @type = "text", @placeholder = "البريد الإلكتروني" } })
                    </div>
                    <div class="input my-3">
                        <i class="position-absolute "><img class="lock-icon" src="\images\padlock.png" alt="lock icon"></i>
                        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "input-field bg-white rounded-pill p-Input", @type = "password", @placeholder = "كلمة المرور" } })
                    </div>
                </div>
                <!--Log in button-->
                <div class="btn-m-logIn">
                    <input type="submit" class="btn btn-color text-white rounded-pill" value="تسجيل الدخول">
                    <label class="forget-pass-lable float-right px-3"><a class="text-decoration-none log-link " href="">هل نسيت كلمة المرور؟</a></label>
                </div>
                <div class="text-secondary q-lable mt-lg-10">
                    <label class=" float-end px-sm-1 px-xl-0">  ليس لديك حساب؟   <a class="log-link-reg f-bold px-2 text-decoration-none " href="">  التسجيل  </a></label>
                </div>
            }
        </div>
        <!--image side of page card-->
        <div class="col-md-7 col-lg-8 col-xl-9 rounded-10-start p-0">
            <div class="d-none d-md-flex bg-gray position-relative">
                <img class=" card-img position-relative" src="\images\computer-cleaner.png" alt="image">
                <img class="d-none d-xl-inline employee-img-log-card position-absolute" src="\images\employee.png" alt="persons">
            </div>

        </div>
    </div>

</div>

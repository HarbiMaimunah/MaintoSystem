<!DOCTYPE html>
<html lang="en" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BackOfficePortal</title>
    <link rel="stylesheet" href="~/DataTable/DataTables-1.10.25/css/jquery.dataTables.min.css" />
    <link rel="stylesheet" href="~/js/bootstrap-5.0.2-dist/bootstrap-5.0.2-dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>

    @using BackOfficePortal.ModelsLanguage;
    @inject LanguageService language
        <header>
            <!-- Bootstrap 5 Navbar -->
            <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm ">
                <div class="container-lg">
                    <a class="navbar-brand" href="#">
                        <img src="~/images/logo.png" alt="" class="navbar-logo">
                    </a>
                    <button class="navbar-toggler"
                            type="button"
                            data-bs-toggle="collapse"
                            data-bs-target="#navbarSupportedContent"
                            aria-controls="navbarSupportedContent"
                            aria-expanded="false"
                            aria-label="Toggle navigation">

                        <span class="navbar-toggler-icon light"></span>
                    </button>
                    <div class="collapse navbar-collapse " id="navbarSupportedContent">
                        <ul class="navbar-nav me-auto mb-3 mb-lg-0 ">
                            <li class="nav-item">
                                <a class="nav-link navbar-link " aria-current="page" href="#">حسابي  </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link navbar-link active" href="#">الطلبات</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link navbar-link" href="#">التنبيهات</a>
                            </li>
                        </ul>
                        <div>
                            <button class="bg-white btn-logout btn me-5 d-flex justify-content-center align-items-center">
                                <img src="~/images/logout.png" alt="" class="logout-logo">
                            </button>
                        </div>
                    </div>
                </div>
            </nav>
        </header>

        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>

        <footer class="border-top footer text-muted">
            <div class="container">
                &copy; 2021 - BackOfficePortal - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </footer>
        <script src ="~/lib/jquery/jquery-3.6.0.min.js"></script>
        <script src="~/DataTable/DataTables-1.10.25/js/jquery.dataTables.min.js"></script>
        <script src="~/js/bootstrap-5.0.2-dist/bootstrap-5.0.2-dist/js/bootstrap.js"></script>
        <script src="~/js/site.js"></script>
        @await RenderSectionAsync("Scripts", required: false)

        @section Scripts2 {
            <script src="~/js/BuildingManager/bundle.min.js"></script>
            <script src="~/js/BuildingManager/edit-building.bundle.min.js"></script>
            <script src="~/js/BuildingManager/view-tickets.bundle.min.js"></script>
            <script src="~/js/BuildingManager/view-building.bundle.min.js"></script>
            <script src="~/js/BuildingManager/view-status.bundle.min.js"></script>
            <script src="~/js/MaintenanceManager/bundle.min.js"></script>
            <script src="~/js/MaintenanceWorker/bundle.min.js"></script>
            <script src="~/js/SaveFile.bundle.min.js"></script>
            <script src="~/js/updateUser.bundle.min.js"></script>
        }
        @RenderSection("Scripts2", required: false)

    </body>
</html>
